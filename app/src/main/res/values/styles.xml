<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom Toolbar -->
    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/CustomToolbarTitleTextAppearance</item>
        <item name="android:elevation">4dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.Toolbar.Primary</item>
    </style>

    <style name="ThemeOverlay.Toolbar.Primary" parent="">
        <item name="colorOnPrimary">@color/on_primary</item>
    </style>

    <style name="CustomToolbarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:fontFamily">@font/solaimanlipi</item> <!-- Replace with your font -->
    </style>

    <!-- Buttons -->
    <style name="Widget.App.Button.Filled" parent="Widget.Material3.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="shapeAppearance">@style/Shape.App.Medium</item>
    </style>

    <!-- Shapes -->
    <style name="Shape.App.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>