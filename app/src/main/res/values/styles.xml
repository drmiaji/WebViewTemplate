<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Merged style with attributes from both definitions -->
    <style name="Theme.WebviewTemplate" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/your_primary_color</item>
        <item name="colorPrimaryDark">@color/your_primary_dark_color</item>
        <item name="colorAccent">@color/your_accent_color</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
    <style name="CustomToolbarStyle" parent="Widget.Material3.Toolbar">
        <!-- Replace with your font file -->
        <item name="titleTextAppearance">@style/CustomToolbarTitleTextAppearance</item>
    </style>

    <style name="CustomToolbarTitleTextAppearance" parent="TextAppearance.Material3.TitleLarge">

        <item name="android:textColor">@android:color/white</item> <!-- Optional: Custom text color -->
    </style>
</resources>